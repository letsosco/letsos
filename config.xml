<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns         = "http://www.w3.org/ns/widgets"
        xmlns:gap     = "http://phonegap.com/ns/1.0"
        xmlns:android = "http://schemas.android.com/apk/res/android"        
        id            = "com.letsos.mobile"
        version       = "1.52.07" 
        versionCode   = "105207">
  
  <name>Letsos Mobile</name>
  <description>Letsos Company Mobile App</description>
  <author href="http://letsos.com" email="jfeng@letsos.com">Jason Feng</author>
  <platform name="ios|android" />
  <access origin="*"/>
  <allow-navigation href="*" />
  <allow-intent href="*" />
  
  <preference name="phonegap-version" value="cli-6.5.0" />
  <preference name="AutoHideSplashScreen" value="false" />
  <preference name="SplashScreenDelay" value="10000"/>
  <preference name="FadeSplashScreen" value="false"/>

  <plugin name="cordova-plugin-camera" spec="2.4.0">
    <variable name="CAMERA_USAGE_DESCRIPTION" value="The app would like to access the camera when you attach photos to content." />
    <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="The app would like to access the photo library when you attach images to content." />
  </plugin>
  <plugin name="cordova-plugin-device" spec="1.1.5" />
  <plugin name="cordova-plugin-file" spec="4.3.2" />
  <plugin name="cordova-plugin-file-transfer" spec="1.6.2" />
  <plugin name="cordova-plugin-geolocation" spec="2.4.2" />
  <plugin name="cordova-plugin-inappbrowser" spec="1.7.0" />
  <plugin name="cordova-plugin-network-information" spec="1.3.2" />
  <plugin name="cordova-plugin-splashscreen" spec="4.0.2" />
  <plugin name="cordova-plugin-statusbar" spec="2.2.2" />
  <plugin name="cordova-plugin-webintent2" spec="1.0.1" />
  <plugin name="cordova-plugin-whitelist" spec="1.3.2" />
  <plugin name="phonegap-plugin-push" spec="1.9.0">
    <param name="SENDER_ID" value="31561045929" />
  </plugin>

  <icon src="icon.png" />
  <splash src="splash.png" />
  
  <platform name="ios">
    <preference name="iosPersistentFileLocation" value="Library" />
    <icon src="res/icon/ios/icon-29.png"    width="29"  height="29" />
    <icon src="res/icon/ios/icon-29@2x.png" width="58"  height="58" />
    <icon src="res/icon/ios/icon-29@3x.png" width="87"  height="87" />
    <icon src="res/icon/ios/icon-40.png"    width="40"  height="40" />
    <icon src="res/icon/ios/icon-40@2x.png" width="80"  height="80" />
    <icon src="res/icon/ios/icon-50.png"    width="50"  height="50" />
    <icon src="res/icon/ios/icon-50@2x.png" width="100" height="100" />
    <icon src="res/icon/ios/icon-57.png"    width="57"  height="57" />
    <icon src="res/icon/ios/icon-57@2x.png" width="114" height="114" />
    <icon src="res/icon/ios/icon-60.png"    width="60"  height="60" />
    <icon src="res/icon/ios/icon-60@2x.png" width="120" height="120" />
    <icon src="res/icon/ios/icon-60@3x.png" width="180" height="180" />
    <icon src="res/icon/ios/icon-72.png"    width="72"  height="72" />
    <icon src="res/icon/ios/icon-72@2x.png" width="144" height="144" />
    <icon src="res/icon/ios/icon-76.png"    width="76"  height="76" />
    <icon src="res/icon/ios/icon-76@2x.png" width="152" height="152" />
    <splash src="res/splash/ios/iphone-portrait.png"      width="320"  height="480" />
    <splash src="res/splash/ios/iphone-portrait-2x.png"   width="640"  height="960" />
    <splash src="res/splash/ios/iphone5-portrait-2x.png"  width="640"  height="1136" />
    <splash src="res/splash/ios/iphone6-portrait-2x.png"  width="750"  height="1334" />
    <splash src="res/splash/ios/iphone6p-portrait-3x.png" width="1242" height="2208" />
    <splash src="res/splash/ios/ipad-portrait.png"        width="768"  height="1024" />
    <splash src="res/splash/ios/ipad-landscape.png"       width="1024" height="768" />
    <splash src="res/splash/ios/ipad-portrait-2x.png"     width="1536" height="2048" />
    <splash src="res/splash/ios/ipad-landscape-2x.png"    width="2048" height="1536" />    
  </platform>

  <platform name="android">
    <preference name="android-build-tool" value="gradle" />
    <preference name="android-minSdkVersion" value="15" />
    <preference name="android-targetSdkVersion" value="23" />
    <preference name="StatusBarBackgroundColor" value="#086408" />
    <preference name="AndroidPersistentFileLocation" value="Internal" />
    <icon src="res/icon/android/xhdpi-96.png" density="xhdpi" />    
    <icon src="res/icon/android/ldpi-36.png"  density="ldpi" />
    <icon src="res/icon/android/mdpi-48.png"  density="mdpi" />
    <icon src="res/icon/android/hdpi-72.png"  density="hdpi" />
    <splash src="res/splash/android/ldpi-portrait.png"  density="ldpi" />
    <splash src="res/splash/android/mdpi-portrait.png"  density="mdpi" />
    <splash src="res/splash/android/hdpi-portrait.png"  density="hdpi" />
    <splash src="res/splash/android/xhdpi-portrait.png" density="xhdpi" />
  </platform> 
</widget>