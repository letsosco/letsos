<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns         = "http://www.w3.org/ns/widgets"
        xmlns:gap     = "http://phonegap.com/ns/1.0"
        xmlns:android = "http://schemas.android.com/apk/res/android"        
        id            = "com.letsos.mobile"
        version       = "1.52.06" 
        versionCode   = "105206">
  
  <name>Letsos Mobile</name>
  <description>Letsos Company Mobile App</description>
  <author href="http://letsos.com" email="jfeng@letsos.com">Jason Feng</author>
  <platform name="ios|android" />
  <access origin="*"/>
  <allow-navigation href="*" />
  <allow-intent href="*" />
  
  <preference name="phonegap-version" value="cli-6.5.0" />
  <preference name="AutoHideSplashScreen" value="false" />
  <preference name="SplashScreenDelay" value="10000"/>
  <preference name="FadeSplashScreen" value="false"/>

  <plugin name="cordova-plugin-camera" spec="2.3.0">
    <variable name="CAMERA_USAGE_DESCRIPTION" value="The app would like to access the camera when you attach photos to content." />
    <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="The app would like to access the photo library when you attach images to content." />
  </plugin>
  <plugin name="cordova-plugin-device" spec="1.1.1" />
  <plugin name="cordova-plugin-file" spec="4.1.1" />
  <plugin name="cordova-plugin-file-transfer" spec="1.5.0" />
  <plugin name="cordova-plugin-geolocation" spec="2.1.0" />
  <plugin name="cordova-plugin-inappbrowser" spec="1.3.0" />
  <plugin name="cordova-plugin-network-information" spec="1.2.0" />
  <plugin name="cordova-plugin-splashscreen" spec="4.0.2" />
  <plugin name="cordova-plugin-statusbar" spec="2.1.3" />
  <plugin name="cordova-plugin-webintent2" spec="1.0.1" />
  <plugin name="cordova-plugin-whitelist" spec="1.2.1" />
  <plugin name="phonegap-plugin-push" spec="1.5.3">
    <param name="SENDER_ID" value="31561045929" />
  </plugin>

  <icon src="icon.png" />
  <!--<splash src="splash.png" />-->
  
  <platform name="ios">
    <preference name="iosPersistentFileLocation" value="Library" />    
    <!-- iPhone / iPod Touch  -->
    <icon src="res/icon/ios/icon-60.png" width="60" height="60" />
    <icon src="res/icon/ios/icon-60@2x.png" width="120" height="120" />
    <icon src="res/icon/ios/icon-60@3x.png" width="180" height="180" />
    <!-- iPad -->
    <icon src="res/icon/ios/icon-76.png" width="76" height="76" />
    <icon src="res/icon/ios/icon-76@2x.png" width="152" height="152" />
    <icon src="res/icon/ios/icon-83.5@2x.png" width="167" height="167" />
    <!-- Settings Icon -->
    <icon src="res/icon/ios/icon-small.png" width="29" height="29" />
    <icon src="res/icon/ios/icon-small@2x.png" width="58" height="58" />
    <icon src="res/icon/ios/icon-small@3x.png" width="87" height="87" />
    <!-- Spotlight Icon -->
    <icon src="res/icon/ios/icon-40.png" width="40" height="40" />
    <icon src="res/icon/ios/icon-40@2x.png" width="80" height="80" />
    <icon src="res/icon/ios/icon-40@3x.png" width="120" height="120" />

    <splash src="res/splash/ios/Default@2x~universal~anyany.png" />
    
    <!-- iPhone and iPod touch --><!--
    <splash src="res/splash/ios/default.png" width="320" height="480" />
    <splash src="res/splash/ios/default@2x.png" width="640" height="960" />
    --><!-- iPhone 5 / iPod Touch (5th Generation) --><!--
    <splash src="res/splash/ios/default-568h@2x.png" width="640" height="1136" />
    --><!-- iPhone 6 --><!--
    <splash src="default-667h@2x.png" width="750" height="1334" />
    <splash src="default-portrait-736h@3x.png" width="1242" height="2208" />
    <splash src="default-landscape-736h@3x.png" width="2208" height="1242" />
    --><!-- iPad --><!--
    <splash src="res/splash/ios/default-portrait.png" width="768" height="1024" />    
    <splash src="res/splash/ios/default-landscape.png" width="1024" height="768" />
    --><!-- Retina iPad --><!--
    <splash src="res/splash/ios/default-portrait@2x.png" width="1536" height="2048" />
    <splash src="res/splash/ios/default-landscape@2x.png" width="2048" height="1536" />-->    
  </platform>

  <platform name="android">
    <preference name="android-build-tool" value="gradle" />
    <preference name="android-minSdkVersion" value="15" />
    <preference name="android-targetSdkVersion" value="23" />
    <preference name="StatusBarBackgroundColor" value="#086408" />
    <preference name="AndroidPersistentFileLocation" value="Internal" />
        
    <icon src="res/icon/android/ldpi-36.png"  qualifier="ldpi" />
    <icon src="res/icon/android/mdpi-48.png"  qualifier="mdpi" />
    <icon src="res/icon/android/hdpi-72.png"  qualifier="hdpi" />
    <icon src="res/icon/android/xhdpi-96.png" qualifier="xhdpi" />
    
    <splash src="res/splash/android/ldpi-portrait.png"  qualifier="ldpi" />
    <splash src="res/splash/android/mdpi-portrait.png"  qualifier="mdpi" />
    <splash src="res/splash/android/hdpi-portrait.png"  qualifier="hdpi" />
    <splash src="res/splash/android/xhdpi-portrait.png" qualifier="xhdpi" />     
  </platform>

  <config-file platform="android" parent="/manifest/application/activity" mode="add">
    <intent-filter>
      <action android:name="android.intent.action.SEND" />
      <category android:name="android.intent.category.DEFAULT" />
      <data android:mimeType="image/*" />
      <data android:mimeType="application/pdf" />
      <data android:mimeType="application/vnd.ms-excel" />
    </intent-filter>
  </config-file>
  
</widget>